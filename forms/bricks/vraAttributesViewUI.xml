<?xml version="1.0" encoding="UTF-8"?>
<!--
This brick is used as include in all *Set Forms for the display of vraAttributes within the edit forms.
Please note that not all common vra attributes (as defined by VRA Schema) are handled here as e.g. @pref is
handled by the *Set forms themselves. Same is true for xml:lang which is not used for the Ziziphus project.
-->
<div xmlns="http://www.w3.org/1999/xhtml" xmlns:ev="http://www.w3.org/2001/xml-events" xmlns:xf="http://www.w3.org/2002/xforms">
    <xf:output ref="@dataDate">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/dataDate/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/dataDate/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/dataDate/help"/>
    </xf:output>
    <xf:output ref="@extent">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/extent/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/extent/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/extent/help"/>
    </xf:output>
    <xf:output ref="@href">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/href/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/href/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/href/help"/>
    </xf:output>
    <!--
    not used?
                    <xf:output ref="@xml:lang">
                        <xf:label>lang</xf:label>
                    </xf:output>
    -->
    <!--
    handled outside
                    <xf:output ref="@pref">
                        <xf:label>pref</xf:label>
                    </xf:output>
    -->
    <xf:output ref="@refid" class="testme">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/refid/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/refid/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/refid/help"/>
    </xf:output>
    <xf:output ref="@rules">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/rules/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/rules/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/rules/help"/>
    </xf:output>
    <xf:output ref="@source">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/source/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/source/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/source/help"/>
    </xf:output>
    <xf:output ref="@vocab">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/vocab/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/vocab/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/vocab/help"/>
    </xf:output>
    <!-- todo: must probably be a select1 ? where do we get the list? -->
    <!-- Use "long" names for UI -->
    <xf:output ref="bf:instanceOfModel('m-code-tables', 'i-codes-lang')/items/item[value eq current()/@lang]/label">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/lang/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/lang/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/lang/help"/>
    </xf:output>
    <xf:output ref="@script">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/script/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/script/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/script/help"/>
    </xf:output>
    <xf:output ref="@transliteration">
        <xf:label ref="bf:instanceOfModel('m-lang','i-lang')/transliteration/label"/>
        <xf:hint ref="bf:instanceOfModel('m-lang','i-lang')/transliteration/hint"/>
        <xf:help ref="bf:instanceOfModel('m-lang','i-lang')/transliteration/help"/>
    </xf:output>
</div>